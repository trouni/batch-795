<%# https://getbootstrap.com/docs/4.0/components/card/#titles-text-and-links %>
<%# https://fontawesome.com/v5.15/icons/map-marker-alt?style=solid %>
<div class="container">
  <div class="row">
    <div class="col col-md-8">
      <%= image_tag "http://source.unsplash.com/collection/3099344/1000x500", width: "100%", class: "border shadow mb-5" %>
      <h3>Reviews</h3>
      <div data-controller="insert-in-list">
        <%= render 'reviews/form', restaurant: @restaurant, review: @review %>
        <div data-insert-in-list-target="items">
          <%= render @restaurant.reviews.order(created_at: :desc) %>
        </div>
      </div>
    </div>
    <div class="col col-md-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= @restaurant.name %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><small><i class="fas fa-map-marker-alt"></i> <%= @restaurant.address %></small></h6>
          <p class="card-text"><%= @restaurant.description %></p>
          <h6 class="card-subtitle mb-2 text-muted"><%= @restaurant.category %></h6>
        </div>
      </div>
    </div>
  </div>
</div>
